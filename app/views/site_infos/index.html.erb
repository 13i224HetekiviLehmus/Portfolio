<p id="notice"><%= notice %></p>

<h1>Site Infos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @site_infos.each do |site_info| %>
      <tr>
        <td><%= site_info.name %></td>
        <td><%= site_info.value %></td>
        <td>
          <%= link_to  site_info , :class => 'btn btn-default' do %>
              <span class="glyphicon glyphicon-eye-open"></span>
              <div class="hidden-xs">
                Show
              </div>
          <% end %>
        </td>
        <td>
          <%= link_to edit_site_info_path(site_info),:class => 'btn btn-default' do %>
              <span class="glyphicon glyphicon-pencil"></span>
              <div class="hidden-xs">
                Edit
              </div>
          <% end %>
        </td>
        <td>
          <%= link_to site_info, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' do %>
              <span class="glyphicon glyphicon-trash"></span>
              <div class="hidden-xs">
                Destroy
              </div>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_site_info_path,  :class => 'btn btn-info' do %>
    <span class="glyphicon glyphicon-plus-sign"></span>
      New Site Info
<% end %>
