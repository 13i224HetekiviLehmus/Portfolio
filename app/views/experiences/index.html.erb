<p id="notice"><%= notice %></p>

<h1>Experiences</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Start</th>
      <th>Ending</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @experiences.each do |experience| %>
      <tr>
        <td><%= experience.title %></td>
        <td><%= experience.description %></td>
        <td><%= experience.start %></td>
        <td><%= experience.ending %></td>
        <td>
          <%= link_to experience, :class => 'btn btn-default'  do %>
              <span class="glyphicon glyphicon-eye-open"></span>
              <div class="hidden-xs">
                Show
              </div>
          <% end %>
          </td>
        <td>
          <%= link_to edit_experience_path(experience), :class => 'btn btn-default' do %>
              <span class="glyphicon glyphicon-pencil"></span>
              <div class="hidden-xs">
                Edit
              </div>
          <% end %>
        </td>
        <td>
          <%= link_to experience, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' do %>
              <span class="glyphicon glyphicon-trash"></span>
              <div class="hidden-xs">
                Destroy
              </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_experience_path, :class => 'btn btn-info' do %>
    <span class="glyphicon glyphicon-plus-sign"></span>
    New Experience
<% end %>

