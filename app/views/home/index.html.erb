<div class="container">
    <div class="page-header">
        <h1><%= @person.name %></h1>
    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-push-6">
            <div class="thumbnail">
                <%= image_tag("photo.png", :alt => "Photo of yourself", :width => "100%", :height => "100%") %>
                <div class="caption">
                    <%= @person.name %>
                </div>
            </div>
            <div class="panel panel-danger">
                <div class="panel-heading"><%= @person.info_title %></div>
                <div class="panel-body">
                    <div class="row">
                        <table class="table table-borderless">
                            <tbody>
                                <% @person.person_info.each do |info| %>
                                    <tr>

                                        <td>
                                            <b><%= info.title %></b>
                                        </td>
                                        <td>
                                            <%= info.value %>
                                        </td>
                                    <tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-sm-pull-6">
            <% @person.experience.each do |history| %>
                <div class="panel panel-success">
                    <div class="panel-heading"><%= history.title %></div>
                    <div class="panel-body"> <%= history.description %></div>
                    <div class="panel-footer"> <%= history.start %> - <%= history.ending %></div>
                </div>
            <% end %>
        </div>
    </div>
</div>
